@using System.Web.Mvc.Html
@model UCommerce.MasterClass.Website.Models.AddressDetailsViewModel
@{
    Layout = "Layout.cshtml";
}

<form method="POST">
    
    <div class="well span5">
        <fieldset>
            <legend>Billing</legend>
            <div class="form-group">
                <label class="col-lg-2 control-label">First name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.FirstName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Last name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.LastName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">E-mail</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.EmailAddress)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Company</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.CompanyName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Attention</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.Attention)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Line 1</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.Line1)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Line 2</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.Line2)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">City</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.City)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Postal code</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.PostalCode)
                </div>
            </div><div class="form-group">
                <label class="col-lg-2 control-label">Country</label>
                    @Html.DropDownList("BillingAddress.CountryId", Model.AvailableCountries)
            </div><div class="form-group">
                <label class="col-lg-2 control-label">Phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.PhoneNumber)
                </div>
            </div><div class="form-group">
                <label class="col-lg-2 control-label">Mobile phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.BillingAddress.MobilePhoneNumber)
                </div>
            </div>
        </fieldset>
    </div>

    <div class="well span5">
        <fieldset>
            <legend>Shipping</legend>
            <div class="form-group">
                <label class="col-lg-2 control-label">First name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.FirstName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Last name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.LastName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">E-mail</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.EmailAddress)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Company</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.CompanyName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Attention</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.Attention)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Line 1</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.Line1)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Line 2</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.Line2)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">City</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.City)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Postal code</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.PostalCode)
                </div>
            </div><div class="form-group">
                <label class="col-lg-2 control-label">Country</label>
                    @Html.DropDownList("ShippingAddress.CountryId",Model.AvailableCountries)
            </div><div class="form-group">
                <label class="col-lg-2 control-label">Phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.PhoneNumber)
                </div>
            </div><div class="form-group">
                <label class="col-lg-2 control-label">Mobile phone</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.ShippingAddress.MobilePhoneNumber)
                </div>
            </div>
        </fieldset>
    </div>
    
    <input type="submit" value="Update and continue"/>
</form>